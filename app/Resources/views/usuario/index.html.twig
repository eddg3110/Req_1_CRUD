{% extends 'base.html.twig' %}

{% block body %}
    <h1>Usuarios</h1>

    <table>
        <thead>
            <tr>
                <th>Usuario</th>
                <th>Estado</th>
                <th>Municipio</th>
                <th>Parroquia</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td>{{ usuario.nombreUsuario }}</td>
                <td>{{ usuario.estado }}</td>
                <td>{{ usuario.municipio }}</td>
                <td>{{ usuario.parroquia }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('usuario_show', { 'id': usuario.id }) }}">Ver</a>
                        </li>
                        <li>
                            <a href="{{ path('usuario_edit', { 'id': usuario.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('usuario_new') }}">Nuevo Usuario</a>
        </li>
    </ul>
{% endblock %}
